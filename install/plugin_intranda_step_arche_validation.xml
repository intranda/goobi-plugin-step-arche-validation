<config_plugin>
    <!--
        order of configuration is:
          1.) project name and step name matches
          2.) step name matches and project is *
          3.) project name matches and step name is *
          4.) project name and step name are *
	-->
    
    <config>
        <!-- which projects to use for (can be more then one, otherwise use *) -->
        <project>*</project>
        <step>*</step>
        
        <requiredProjectProperties>
            <field>contact</field>
            <field>digitisingAgent</field>
            <field>metadataCreator</field>
            <field>owner</field>
            <field>rightsHolder</field>
            <field>licensor</field>
            <field>depositor</field>
            <field>curator</field>
        </requiredProjectProperties>



        <requiredProcessProperties>
            <field>OAISet</field>
        </requiredProcessProperties>

        <requiredMetadata>
            <field>CatalogIDDigital</field>
            <field>TitleDocMain</field>
        </requiredMetadata>

    </config>

</config_plugin>
